@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Demo.Business.ViewModels.SedeOlimpica.CreateSedeOlimpicaViewModel

@{
    ViewData["Title"] = "Registrar sede";
}

<div class="container-fluid">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Registrar sede olímpica</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="SedeOlimpica" asp-action="Create">

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Name</label>
                        <input asp-for="Nombre" class="form-control" type="text"/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Ubicacion" class="form-label">Ubicación</label>
                        <input asp-for="Ubicacion" class="form-control" type="text"/>
                        <span asp-validation-for="Ubicacion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Presupuesto" class="form-label">Presupuesto</label>
                        <input asp-for="Presupuesto" class="form-control" type="number"/>
                        <span asp-validation-for="Presupuesto" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-outline-primary float-lg-end">Guardar</button>
                        <a asp-controller="SedeOlimpica" asp-action="Index" class="btn btn-outline-warning">Back</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>