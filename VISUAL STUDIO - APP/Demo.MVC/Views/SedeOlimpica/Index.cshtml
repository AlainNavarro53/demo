@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Demo.Business.ViewModels.SedeOlimpica.SedeOlimpicaViewModel>

@{
    ViewData["Title"] = "Index";
    var count = 0;
}

<div class="text-center text-black fst-italic">
    <h4>Lista de sedes</h4>
</div>


<div class="row">
    <div class="mb-3 mt-3 col-4">
        <a asp-controller="SedeOlimpica" asp-action="Create" class="btn btn-outline-primary">Registrar</a>
    </div>

    <div class="col-4 offset-4 mt-4">
        <div class="mb-3">
            <div class="container-fluid">

                <form class="d-flex" role="Search" method="post" asp-controller="SedeOlimpica" asp-action="Index">

                    <input class="form-control me-2 border-dark background" type="text" placeholder="Buscar por nombres" aria-label="Search" name="Name">

                    <button class="btn btn-outline-dark" type="submit">Buscar</button>

                </form>

            </div>
        </div>
    </div>

</div>

<div class="container-fluid">

    @if (Model == null || Model.Count == 0)
    {
        <h4>No se encontraron elementos.</h4>
    }
    else
    {
        <div class="row mt-4">
            <table class="table table-bordered border-dark">
                <thead>
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Ubicación</th>
                    <th scope="col">Presupuesto</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
                </thead>

                @foreach (var item in Model)
                {
                    count++;
                    <tbody>
                    <tr>
                        <td class="text-center">@count</td>
                        <td>@item.Nombre</td>
                        <td>@item.Ubicacion</td>
                        <td>@item.Presupuesto</td>
                        <td>
                            <div class="text-center">
                                <a asp-controller="SedeOlimpica" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Edit</a>
                                <a asp-controller="SedeOlimpica" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                    </tbody>
                }

            </table>
        </div>
    }
</div>