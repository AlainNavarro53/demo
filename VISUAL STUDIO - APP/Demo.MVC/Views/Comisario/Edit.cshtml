@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Demo.Business.ViewModels.Comisario.ComisarioViewModel

@{
    ViewData["Title"] = "Modificar comisario";
}

<div class="container-fluid">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>@($"Editar comisario: {Model.Nombre}")</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Comisario" asp-action="Edit">

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Name</label>
                        <input asp-for="Nombre" class="form-control" type="text"/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tipo" class="form-label">Tipo</label>
                        <input asp-for="Tipo" class="form-control" type="text"/>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdEvento" class="form-label">Evento</label>
                        <select asp-for="IdEvento" asp-items="@(new SelectList(Model.Eventos, "Id", "Nombre"))" class="form-select">
                            <option disabled selected>Seleccionar</option>
                        </select>
                        <span asp-validation-for="IdEvento" class="text-danger"></span>
                    </div>

                    <input asp-for="Id" type="hidden"/>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-outline-primary float-lg-end">Guardar</button>
                        <a asp-controller="Comisario" asp-action="Index" class="btn btn-outline-warning">Back</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>